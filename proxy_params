proxy_set_header Host $host; # The $http_host variable is deprecated. If you use $http_host in this case the value will be the same as the Host header, but if the header is missing from the original request this may lead to unexpected behavior.
proxy_set_header X-Real-IP $remote_addr;
proxy_set_header X-Forwarded-Port $server_port;
proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
proxy_set_header X-Forwarded-Proto $scheme;


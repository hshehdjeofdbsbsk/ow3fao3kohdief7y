upstream fastapi_app_server {
  server unix:/srv/fastapi-app/run/gunicorn.sock fail_timeout=0;
}

server {
  listen 8080;
  server_name _; # Add here the ip address of your server or a domain pointing to that ip (like example.com or www.example.com).

  keepalive_timeout 5;
  client_max_body_size 4G;

  access_log /srv/fastapi-app/log/nginx-access.log;
  error_log  /srv/fastapi-app/log/nginx-error.log;

  location / {
    # Proxy cache settings
    proxy_cache cache;
    proxy_cache_valid 200 302 15m;  # Cache successful responses for 15 minutes
    proxy_cache_valid 404 5m;       # Cache 404 responses for 5 minutes
    proxy_cache_bypass $no_cache;
    proxy_no_cache $no_cache;
    proxy_cache_use_stale error timeout updating http_500 http_502 http_503 http_504;
    proxy_cache_lock on;
    proxy_cache_lock_timeout 5s;
    
    # Cache debugging headers
    add_header X-Cache-Status $upstream_cache_status always;
    add_header X-Cache-Key "$host$request_uri" always;
    
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    if (!-f $request_filename) {
      proxy_pass http://fastapi_app_server;
      break;
    }
  }
  include markov_source.conf;
}
